<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChillWathcerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChillWathcerApp.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#353839">

    <FlyoutItem>
        <Tab Title="Readings" Route="ReadingsView" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ReadingsView}" Route="ReadingsView"></ShellContent>
        </Tab>
        <Tab Title="Controls" Route="ControlsView"  Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ControlsView}" Route="ControlsView"></ShellContent>
        </Tab>
    </FlyoutItem>

</Shell>
